<div class="jumbotron profile">
  <h1 id="profile-name"><image src="<%=@user.avatar_url%>" id="profile-avatar"> Hi, <%=@user.name%></h1>
  <p>github username: <%=link_to @user.github_username, "https://github.com/#{@user.github_username}", target: "blank"%></p>
  <p>email: <%=@user.email%></p>
</div>

<div data-id="repo-list">
  <%= render partial: "repositories/repos", locals: {repositories: @user.repositories}%>
</div>
</div>

<div class="col-md-2 col-md-offset-5" style="text-align: center;">
  <%=render partial: 'repositories/modal'%>
</div>